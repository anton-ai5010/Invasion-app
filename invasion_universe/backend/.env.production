# Production configuration
APP_NAME=Invasion Universe API
ENV=production
DATABASE_URL=postgresql+psycopg2://iu_prod:strong_password_here@localhost:5432/iu_production
REDIS_URL=redis://localhost:6379/0
JWT_SECRET=your_very_long_and_secure_secret_key_change_this_immediately
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRES_MIN=60
CORS_ORIGINS=https://app.invasion.ru,https://admin.invasion.ru
FCM_SERVER_KEY=your_fcm_server_key_when_ready
CANCELLATION_POLICY_JSON=/app/app/config/cancellation_policy.json

# Security
SECURE_COOKIES=true
SAMESITE_COOKIES=strict
ALLOWED_HOSTS=api.invasion.ru,localhost

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true